<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/bg_color"
    tools:context=".activities.PharmacyLocationActivity">

    <include
        android:id="@+id/appBar"
        layout="@layout/app_bar_layout"
        app:layout_constraintTop_toTopOf="parent" />

    <TextView
        android:id="@+id/titleTV"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginHorizontal="@dimen/_15sdp"
        android:layout_marginBottom="@dimen/_15sdp"
        android:fontFamily="@font/montserrat_medium"
        android:text="Pharmacy Pick up Location"
        android:textColor="@color/black"
        android:textSize="@dimen/_14sdp"
        app:layout_constraintBottom_toTopOf="@+id/pharmacyNameET"
        app:layout_constraintStart_toStartOf="parent" />


    <EditText
        android:id="@+id/pharmacyNameET"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:background="@drawable/bg_box"
        android:paddingVertical="@dimen/_12sdp"
        android:hint="Pharmacy Name"
        android:textColorHint="@color/hint_color"
        android:fontFamily="@font/montserrat_regular"
        android:textSize="@dimen/_10sdp"
        android:textStyle="italic"
        android:imeOptions="actionNext"
        android:layout_marginBottom="@dimen/_10sdp"
        android:paddingHorizontal="@dimen/_10sdp"
        android:layout_marginHorizontal="@dimen/_15sdp"
        app:layout_constraintBottom_toTopOf="@+id/pharmacyNumberET" />

    <EditText
        android:id="@+id/pharmacyNumberET"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:background="@drawable/bg_box"
        android:paddingVertical="@dimen/_12sdp"
        android:hint="Pharmacy Number"
        android:textColorHint="@color/hint_color"
        android:fontFamily="@font/montserrat_regular"
        android:textSize="@dimen/_10sdp"
        android:textStyle="italic"
        android:imeOptions="actionNext"
        android:layout_marginBottom="@dimen/_10sdp"
        android:paddingHorizontal="@dimen/_10sdp"
        android:layout_marginHorizontal="@dimen/_15sdp"
        app:layout_constraintBottom_toTopOf="@+id/pharmacyAddressET" />

    <EditText
        android:id="@+id/pharmacyAddressET"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:background="@drawable/bg_box"
        android:paddingVertical="@dimen/_12sdp"
        android:hint="Pharmacy Address"
        android:textColorHint="@color/hint_color"
        android:fontFamily="@font/montserrat_regular"
        android:textSize="@dimen/_10sdp"
        android:textStyle="italic"
        android:imeOptions="actionNext"
        android:inputType="textEmailAddress"
        android:layout_marginBottom="@dimen/_10sdp"
        android:paddingHorizontal="@dimen/_10sdp"
        android:layout_marginHorizontal="@dimen/_15sdp"
        app:layout_constraintBottom_toTopOf="@+id/stateET" />

    <EditText
        android:id="@+id/stateET"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:background="@drawable/bg_box"
        android:paddingVertical="@dimen/_12sdp"
        android:hint="State"
        android:textColorHint="@color/hint_color"
        android:fontFamily="@font/montserrat_regular"
        android:textSize="@dimen/_10sdp"
        android:textStyle="italic"
        android:imeOptions="actionNext"
        android:layout_marginBottom="@dimen/_10sdp"
        android:paddingHorizontal="@dimen/_10sdp"
        android:layout_marginHorizontal="@dimen/_15sdp"
        app:layout_constraintBottom_toTopOf="@+id/postCodeET" />

    <EditText
        android:id="@+id/postCodeET"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:background="@drawable/bg_box"
        android:paddingVertical="@dimen/_12sdp"
        android:hint="Post Code"
        android:textColorHint="@color/hint_color"
        android:fontFamily="@font/montserrat_regular"
        android:textSize="@dimen/_10sdp"
        android:textStyle="italic"
        android:imeOptions="actionNext"
        android:layout_marginBottom="@dimen/_20sdp"
        android:paddingHorizontal="@dimen/_10sdp"
        android:layout_marginHorizontal="@dimen/_15sdp"
        app:layout_constraintBottom_toTopOf="@+id/doneTV" />


    <TextView
        android:id="@+id/doneTV"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:background="@color/red_color"
        android:fontFamily="@font/montserrat_regular"
        android:gravity="center"
        android:paddingHorizontal="@dimen/_70sdp"
        android:paddingVertical="@dimen/_12sdp"
        android:text="Done"
        android:textColor="@color/white"
        android:textSize="@dimen/_12sdp"
        android:layout_marginBottom="@dimen/_20sdp"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent" />

</androidx.constraintlayout.widget.ConstraintLayout>