<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/bg_color"
    tools:context=".activities.SignUpMyInfoActivity">

    <include
        android:id="@+id/appBar"
        layout="@layout/app_bar_layout"
        app:layout_constraintTop_toTopOf="parent" />


    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginHorizontal="@dimen/_15sdp"
        android:layout_marginBottom="@dimen/_20sdp"
        android:fontFamily="@font/montserrat_medium"
        android:text="Your information"
        android:textColor="@color/black"
        android:textSize="@dimen/_14sdp"
        app:layout_constraintBottom_toTopOf="@+id/relationET"
        app:layout_constraintStart_toStartOf="parent" />

    <EditText
        android:id="@+id/relationET"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:background="@drawable/bg_box"
        android:paddingVertical="@dimen/_12sdp"
        android:hint="Relationship with patient"
        android:textColorHint="@color/hint_color"
        android:fontFamily="@font/montserrat_regular"
        android:textSize="@dimen/_10sdp"
        android:textStyle="italic"
        android:imeOptions="actionNext"
        android:inputType="textEmailAddress"
        android:layout_marginBottom="@dimen/_10sdp"
        android:paddingHorizontal="@dimen/_10sdp"
        android:layout_marginHorizontal="@dimen/_15sdp"
        app:layout_constraintBottom_toTopOf="@+id/nameET" />

    <EditText
        android:id="@+id/nameET"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:background="@drawable/bg_box"
        android:paddingVertical="@dimen/_12sdp"
        android:hint="Your name"
        android:textColorHint="@color/hint_color"
        android:fontFamily="@font/montserrat_regular"
        android:textSize="@dimen/_10sdp"
        android:textStyle="italic"
        android:imeOptions="actionNext"
        android:layout_marginBottom="@dimen/_10sdp"
        android:paddingHorizontal="@dimen/_10sdp"
        android:layout_marginHorizontal="@dimen/_15sdp"
        app:layout_constraintBottom_toTopOf="@+id/phoneLayout" />

    <LinearLayout
        android:id="@+id/phoneLayout"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        android:weightSum="4"
        android:layout_marginHorizontal="@dimen/_15sdp"
        android:layout_marginBottom="@dimen/_10sdp"
        app:layout_constraintBottom_toTopOf="@+id/clinicNameET">

        <EditText
            android:layout_weight="1"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:background="@drawable/bg_box"
            android:paddingVertical="@dimen/_12sdp"
            android:hint="+44"
            android:textColorHint="@color/hint_color"
            android:fontFamily="@font/montserrat_regular"
            android:textSize="@dimen/_10sdp"
            android:textStyle="italic"
            android:imeOptions="actionNext"
            android:paddingHorizontal="@dimen/_10sdp" />

        <EditText
            android:layout_weight="3"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:background="@drawable/bg_box"
            android:paddingVertical="@dimen/_12sdp"
            android:hint="Phone Number"
            android:textColorHint="@color/hint_color"
            android:fontFamily="@font/montserrat_regular"
            android:textSize="@dimen/_10sdp"
            android:textStyle="italic"
            android:layout_marginStart="@dimen/_10sdp"
            android:imeOptions="actionNext"
            android:paddingHorizontal="@dimen/_10sdp" />

    </LinearLayout>

    <EditText
        android:id="@+id/clinicNameET"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:background="@drawable/bg_box"
        android:paddingVertical="@dimen/_12sdp"
        android:hint="Clinic Name"
        android:textColorHint="@color/hint_color"
        android:fontFamily="@font/montserrat_regular"
        android:textSize="@dimen/_10sdp"
        android:textStyle="italic"
        android:imeOptions="actionNext"
        android:layout_marginBottom="@dimen/_20sdp"
        android:paddingHorizontal="@dimen/_10sdp"
        android:layout_marginHorizontal="@dimen/_15sdp"
        app:layout_constraintBottom_toTopOf="@+id/nextTV" />

    <TextView
        android:id="@+id/nextTV"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:background="@color/red_color"
        android:fontFamily="@font/montserrat_regular"
        android:gravity="center"
        android:paddingHorizontal="@dimen/_60sdp"
        android:paddingVertical="@dimen/_12sdp"
        android:text="Next"
        android:textColor="@color/white"
        android:textSize="@dimen/_12sdp"
        android:layout_marginBottom="@dimen/_20sdp"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent" />

</androidx.constraintlayout.widget.ConstraintLayout>